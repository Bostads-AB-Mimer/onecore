{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "types": [
      "jest",
      "node"
    ],
    "noErrorTruncation": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../../node_modules"
  ]
}
