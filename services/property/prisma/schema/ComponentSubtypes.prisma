model ComponentSubtypes {
  id                        String   @id @default(uuid()) @db.UniqueIdentifier
  subTypeName               String   @map("sub_type_name") @db.NVarChar(255)
  typeId                    String   @map("type_id") @db.UniqueIdentifier
  xpandCode                 String?  @map("xpand_code") @db.NVarChar(50)
  depreciationPrice         Float    @map("depreciation_price") @db.Money
  technicalLifespan         Float    @map("technical_lifespan")
  economicLifespan          Float    @map("economic_lifespan")
  replacementIntervalMonths Int      @map("replacement_interval_months")
  quantityType              String   @map("quantity_type") @db.NVarChar(20)
  createdAt                 DateTime @default(now()) @map("created_at") @db.DateTime
  updatedAt                 DateTime @default(now()) @updatedAt @map("updated_at") @db.DateTime

  // Relations
  componentType   ComponentTypes    @relation(fields: [typeId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  componentModels ComponentModels[]

  @@index([typeId])
  @@map("component_subtypes")
}
