model ComponentModels {
  id                        String   @id @default(uuid()) @db.UniqueIdentifier
  componentTypeId           String   @map("component_type_id") @db.UniqueIdentifier
  subtypeId                 String   @map("subtype_id") @db.UniqueIdentifier
  currentPrice              Float    @map("current_price") @db.Money
  warrantyMonths            Int      @map("warranty_months")
  manufacturer              String   @db.NVarChar(255)
  technicalLifespan         Float    @map("technical_lifespan") @db.Money
  technicalSpecification    String?  @map("technical_specification") @db.NVarChar(Max)
  installationInstructions  String?  @map("installation_instructions") @db.NVarChar(Max)
  economicLifespan          Float    @map("economic_lifespan") @db.Money
  dimensions                String?  @db.NVarChar(255)
  replacementIntervalMonths Int      @map("replacement_interval_months")
  quantityType              String   @map("quantity_type") @db.NVarChar(20)
  coclassCode               String   @map("coclass_code") @db.NVarChar(50)
  documents                 String?  @db.NVarChar(Max) // JSON array: ["fileId1", "fileId2"]
  createdAt                 DateTime @default(now()) @map("created_at") @db.DateTime
  updatedAt                 DateTime @default(now()) @updatedAt @map("updated_at") @db.DateTime

  // Relations
  // NoAction prevents deletion if models/subtypes exist (SQL Server doesn't support Restrict)
  componentType ComponentTypes      @relation(fields: [componentTypeId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_component_models_type")
  subtype       ComponentSubtypes   @relation(fields: [subtypeId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "FK_component_models_subtype")
  components    Components[]

  @@index([componentTypeId], map: "idx_component_models_type")
  @@index([subtypeId], map: "idx_component_models_subtype")
  @@map("component_models")
}
