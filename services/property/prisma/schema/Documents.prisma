model Documents {
  id                  String   @id @default(uuid()) @db.UniqueIdentifier
  componentModelId    String?  @db.UniqueIdentifier
  componentInstanceId String?  @db.UniqueIdentifier
  fileId              String   @db.NVarChar(255)
  createdAt           DateTime @default(now()) @db.DateTime
  updatedAt           DateTime @default(now()) @updatedAt @db.DateTime

  // Relations
  componentModel    ComponentModels? @relation(fields: [componentModelId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  componentInstance Components?      @relation(fields: [componentInstanceId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@index([componentModelId])
  @@index([componentInstanceId])
  @@index([fileId])
  @@map("documents")
}
