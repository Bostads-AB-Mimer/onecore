model ComponentTypes {
  id          String   @id @default(uuid()) @db.UniqueIdentifier
  typeName    String   @map("type_name") @db.NVarChar(255)
  categoryId  String   @map("category_id") @db.UniqueIdentifier
  description String   @db.NVarChar(255)
  createdAt   DateTime @default(now()) @map("created_at") @db.DateTime
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.DateTime

  // Relations
  category          ComponentCategories @relation(fields: [categoryId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  componentSubtypes ComponentSubtypes[]

  @@index([categoryId])
  @@map("component_types")
}
