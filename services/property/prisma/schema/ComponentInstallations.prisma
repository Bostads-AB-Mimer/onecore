model ComponentInstallations {
  id                 String    @id @default(uuid()) @db.UniqueIdentifier
  componentId        String    @db.UniqueIdentifier
  spaceId            String?   @db.Char(15)
  spaceType          String    @db.NVarChar(20)
  installationDate   DateTime  @db.Date
  deinstallationDate DateTime? @db.Date
  orderNumber        String?   @db.NVarChar(100)
  cost               Float     @db.Money
  createdAt          DateTime  @default(now()) @db.DateTime
  updatedAt          DateTime  @default(now()) @updatedAt @db.DateTime

  // Relations
  component      Components      @relation(fields: [componentId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  propertyObject PropertyObject? @relation(fields: [spaceId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([componentId])
  @@index([spaceId])
  @@map("component_installations")
}
