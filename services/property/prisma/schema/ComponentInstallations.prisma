model ComponentInstallations {
  id                 String    @id @default(uuid()) @db.UniqueIdentifier
  componentId        String    @map("component_id") @db.UniqueIdentifier
  spaceId            String?   @map("space_id") @db.Char(15)
  spaceType          String    @map("space_type") @db.NVarChar(20)
  installationDate   DateTime  @map("installation_date") @db.Date
  deinstallationDate DateTime? @map("deinstallation_date") @db.Date
  orderNumber        String?   @map("order_number") @db.NVarChar(100)
  cost               Float     @db.Money
  createdAt          DateTime  @default(now()) @map("created_at") @db.DateTime
  updatedAt          DateTime  @default(now()) @updatedAt @map("updated_at") @db.DateTime

  // Relations
  component      Components      @relation(fields: [componentId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  propertyObject PropertyObject? @relation(fields: [spaceId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  @@index([componentId])
  @@index([spaceId])
  @@map("component_installations")
}
