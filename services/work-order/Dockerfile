# ==========================
# Build stage
# ==========================
FROM node:23-slim AS builder

ENV CI=true

WORKDIR /app

# Install pnpm
RUN corepack enable && corepack prepare pnpm@10.6.1 --activate

# Copy package files for dependency installation
COPY package.json tsconfig*.json pnpm-lock.yaml pnpm-workspace.yaml ./

# Copy relevant packages
COPY libs/types ./libs/types
COPY libs/utilities ./libs/utilities
COPY services/work-order ./services/work-order

RUN pnpm install
RUN pnpm build:libs
RUN pnpm run --filter @onecore/work-order build
RUN pnpm install --only=prod
RUN pnpm deploy --filter @onecore/work-order --prod /out

# ==========================
# Run stage
# ==========================
FROM node:23-slim AS runner

WORKDIR /app

COPY --from=builder /out ./

ENV PORT 80
EXPOSE 80

CMD ["node", "build/index.js"]
